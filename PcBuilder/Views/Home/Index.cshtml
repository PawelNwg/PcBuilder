@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<PcBuilder.Models.Product>

<head>
    <title>@ViewData["Title"]</title>
    <link href="../css/site.css" rel="stylesheet" />
</head>
<body>

    @if (Model.Count() > 0)
    {
        <div class="borderCss">
            <div id="carouselExampleControls" class="carousel slide w-75 d-flex ml-5 mt-5" data-ride="carousel">
                <div class="carousel-inner m-auto p-3">
                    <div class="carousel-item active">
                        <img class="d-block w-25 align-content-center mleft" src="data:image/jpeg;base64, @Model.OrderBy(arg => Guid.NewGuid()).Take(1).FirstOrDefault().File" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-25 align-content-center mleft" src="data:image/jpeg;base64, @Model.OrderBy(arg => Guid.NewGuid()).Take(1).FirstOrDefault().File" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-25 align-content-center mleft" src="data:image/jpeg;base64, @Model.OrderBy(arg => Guid.NewGuid()).Take(1).FirstOrDefault().File" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }

    <section>
        <ul class="row mt-3" style="margin: 0px">
            @foreach (var item in Model)
            {
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="details">
                    <li>
                        <div class="card col">
                            <div class="imgProduct">
                                <img src="data:image/jpeg;base64, @item.File" />
                            </div>
                            <div class="content">
                                <h3>@item.Name</h3>
                                <h2>@item.Price</h2>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId" class="buy">Dodaj do koszyka</a>
                            </div>
                        </div>
                    </li>
                </a>
            }
        </ul>
        <div style="min-height: 50px"></div>
    </section>
</body>