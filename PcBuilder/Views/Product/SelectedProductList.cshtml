@model IEnumerable<PcBuilder.Models.Product>

<head>
    <title>@ViewData["Title"]</title>
    <link href="~/css/Card.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div style="overflow: hidden;">
            <a id="koszykHeaderLink" href="link">
                Koszyk (0)
                <span></span>
            </a>
        </div>
    </header>

    <section>
        <ul class="row">
            @foreach (var item in Model)
            {
                <li>
                    <div class="card col">
                        <div class="imgProduct">
                            <img src="data:image/jpeg;base64, @item.File" />
                        </div>
                        <div class="content">
                            <h3>@item.Name</h3>
                            <h2>@item.Price</h2>
                            <a href="#" class="buy">Dodaj do koszyka</a>
                        </div>
                    </div>
                </li>

                @*<li>
                        <article>
                            <a class="dodajDoKoszykaLink" href="link">
                                <img src="~/content/Images/koszyk.png" />
                            </a>
                            <a class="kursSzczegolyLink" href="">
                                <div class="bestsellerFlag"></div>

                                <h1>
                                </h1>
                            </a>
                        </article>
                    </li>*@
            }
        </ul>
    </section>
</body>