@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>   
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij aby potwierdzić konto</a>
</p>
    }
    else
    {
<p>
        Sprawdź swoją skrzynkę pocztową aby potwierdzić konto.
</p>
    }
}
